<resources>

    <!-- Base application theme. -->
    <style name="Base.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme" parent="Base.AppTheme" />
    <!-- Provide this theme to force navigation draw overlap status bar -->
    <style name="DashboardActivityTheme" parent="Base.AppTheme" />

    <style name="TouchRipplePrimaryStyle" parent="Material.Drawable.Ripple.Touch">
        <item name="rd_rippleColor">@color/colorPrimary</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Button</item>
    </style>

    <!-- TOOLBAR -->
    <style name="ToolbarTheme" parent="Base.AppTheme">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:actionMenuTextColor">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:textSize">15sp</item>
    </style>



</resources>
